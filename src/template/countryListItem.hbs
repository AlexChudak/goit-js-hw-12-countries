{{#each this}}
<li class="item">
    <article class="article">
        <div class="name">
            <h1 class="name country">{{name}}</h1>
        </div>
        <div class="country-characteristics">
            <h2>Capital:{{capital}}</h2>
            <span>Population:{{population}}</span>
            <div class="langs">
                <h2>Language:</h2>
                <ul class="lang-list">
                    {{#each languages}}
                    <li class="lang-item">{{name}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="img-flag">
            <img src="{{flag}}" alt="flag" width="300" height="250">
        </div>
    </article>
</li>
{{/each}}